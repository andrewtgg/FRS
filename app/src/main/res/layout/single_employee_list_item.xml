<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/employee_item_img"
        android:layout_width="160dp"
        android:layout_height="160dp"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <TextView
        android:id="@+id/employee_item_id_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/employee_item_img"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="125dp"
        android:layout_toRightOf="@id/employee_item_img"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/employee_item_name_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/employee_item_img"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="85dp"
        android:layout_toRightOf="@id/employee_item_img"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/employee_item_time_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/employee_item_img"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="45dp"
        android:layout_toRightOf="@id/employee_item_img"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/employee_item_date_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/employee_item_img"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/employee_item_img"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

</RelativeLayout>